# =================================
# CONFIGURACIÓN DE NEXTCLOUD
# =================================

# Puerto de Nextcloud (cambia si tienes conflictos)
NEXTCLOUD_PORT=8080

# Credenciales de administrador de Nextcloud
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_admin_password

# Dominios confiables (separa con comas)
# Agrega la IP de tu servidor y cualquier dominio que uses
NEXTCLOUD_TRUSTED_DOMAINS=localhost,192.168.1.100,your_server_ip

# =================================
# CONFIGURACIÓN DE BASE DE DATOS
# =================================

# Credenciales de MariaDB
MARIADB_ROOT_PASSWORD=your_root_password
MARIADB_USER=nextcloud
MARIADB_PASSWORD=your_nextcloud_db_password
MARIADB_NAME=nextcloud